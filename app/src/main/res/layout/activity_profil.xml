<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nom_recette"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/btton_ajout"
        android:layout_width="60dp"
        android:layout_height="44dp"
        app:srcCompat="@drawable/ic_baseline_playlist_add_24"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="246dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="@+id/textView9"
        tools:layout_editor_absoluteX="35dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="13dp"
        android:layout_height="15dp"
        android:text="id"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="175dp" />

    <EditText
        android:id="@+id/ingredient_recette"
        android:layout_width="164dp"
        android:layout_height="38dp"
        android:ems="10"
        android:hint="nom de recette"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        tools:layout_editor_absoluteX="151dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="liste_ingredient"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="378dp" />

    <EditText
        android:id="@+id/liste_ingredient"
        android:layout_width="164dp"
        android:layout_height="38dp"
        android:ems="10"
        android:hint="liste ingredient"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="@+id/textView"
        tools:layout_editor_absoluteX="151dp" />

    <EditText
        android:id="@+id/image_recette"
        android:layout_width="164dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom_recette"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="316dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_delete_24"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="468dp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_update_24"
        tools:layout_editor_absoluteX="247dp"
        tools:layout_editor_absoluteY="461dp" />

</androidx.constraintlayout.widget.ConstraintLayout>